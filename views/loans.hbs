    <script>
  // Function to fetch and display budget data
  async function fetchAndDisplayBudget() {
    try {
      const response = await fetch('/get-shortTermLoan');

      if (!response.ok) {
        throw new Error('Failed to fetch loan data');
      }

      const data = await response.json();

      // Update your HTML elements with the fetched budget data
      updateShortTermtData(data);
    } catch (error) {
      console.error('Error:', error.message);
    }
  }

  function updateShortTermData(data) {
    document.getElementById('shortTermLoanBalanceLabel').innerText = data.shortTermLoanBalance.toFixed(2);
    document.getElementById('shortTermLoanLastUpdatedLabel').innerText = data.dueDate.toFixed(2);

  
  }


  window.onload = fetchAndDisplayBudget;
