<script>
  // Function to fetch and display budget data
  async function fetchAndDisplayBudget() {
    try {
      const response = await fetch('/display-budget');

      if (!response.ok) {
        throw new Error('Failed to fetch budget data');
      }

      const data = await response.json();

      // Update your HTML elements with the fetched budget data
      updateBudgetData(data);
    } catch (error) {
      console.error('Error:', error.message);
    }
  }

  // Function to update HTML elements with budget data
  function updateBudgetData(data) {
    document.getElementById('amount1').innerText = data.amount1.toFixed(2);
    document.getElementById('amount2').innerText = data.amount2.toFixed(2);
    document.getElementById('amount3').innerText = data.amount3.toFixed(2);
    document.getElementById('amount4').innerText = data.amount4.toFixed(2);
    document.getElementById('amount5').innerText = data.amount5.toFixed(2);
    document.getElementById('amount6').innerText = data.amount6.toFixed(2);
    document.getElementById('amount7').innerText = data.amount7.toFixed(2);
    document.getElementById('budgetTotal').innerText = data.budgetTotal.toFixed(2);
  }

  // Call the function when the window is loaded
  window.onload = fetchAndDisplayBudget;
